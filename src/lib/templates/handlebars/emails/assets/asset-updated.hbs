{{#base headerTitle="Asset Information Updated" headerSubtitle="Changes have been made to your assigned asset"}}

<div class="greeting">
    Hello {{name}}! ğŸ”„
</div>

<div class="message">
    <p>The information for an asset assigned to you has been updated. Please review the changes below and update your records accordingly.</p>
</div>

<!-- Asset Details -->
<div class="info-card">
    <h3>ğŸ·ï¸ Asset Information</h3>
    <div class="detail-grid">
        <div class="detail-item">
            <span class="detail-label">Asset ID</span>
            <span class="detail-value" style="font-weight: 700; color: #7c2d92;">{{assetId}}</span>
        </div>
        <div class="detail-item">
            <span class="detail-label">Brand</span>
            <span class="detail-value">{{brand}}</span>
        </div>
        <div class="detail-item">
            <span class="detail-label">Model</span>
            <span class="detail-value">{{modelNumber}}</span>
        </div>
        <div class="detail-item">
            <span class="detail-label">Serial Number</span>
            <span class="detail-value" style="font-family: monospace; background: #f3f4f6; padding: 2px 6px; border-radius: 4px;">{{serialNumber}}</span>
        </div>
    </div>
</div>

<!-- Update Details -->
<div class="warning-notice">
    <h4 style="color: #d97706; margin-bottom: 16px;">ğŸ“ Update Information</h4>
    <div class="detail-grid">
        <div class="detail-item">
            <span class="detail-label">Updated By</span>
            <span class="detail-value">{{updatedBy.name}}</span>
        </div>
        <div class="detail-item">
            <span class="detail-label">Update Date</span>
            <span class="detail-value">{{formatDate updateDate}}</span>
        </div>
        {{#if updateReason}}
        <div class="detail-item">
            <span class="detail-label">Reason</span>
            <span class="detail-value">{{updateReason}}</span>
        </div>
        {{/if}}
    </div>
</div>

<!-- Updated Fields -->
<div class="info-card" style="background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%); border-left-color: #f59e0b;">
    <h4 style="color: #92400e; margin-bottom: 16px;">ğŸ”„ Updated Fields</h4>
    <ul style="margin-left: 20px; color: #7c2d92; line-height: 1.8; font-size: 15px; font-weight: 500;">
        {{#each updatedFields}}
        <li>{{this}}</li>
        {{/each}}
    </ul>
</div>

<!-- Next Steps -->
<div class="success-notice">
    <p style="font-size: 16px; font-weight: 700; color: #15803d;">ğŸ“‹ Please Review</p>
    <ul style="margin-left: 20px; margin-top: 16px; line-height: 1.8; font-size: 15px;">
        <li>Log in to review the complete updated asset information</li>
        <li>Update any local records or documentation</li>
        <li>Contact the asset administrator if you have questions</li>
        <li>Report any discrepancies immediately</li>
    </ul>
</div>

<!-- CTA Section -->
<div class="cta-section">
    <a href="{{dashboardLink}}" class="cta-button">View Updated Asset Details</a>
</div>

<div class="message">
    <p style="font-size: 14px; color: #6b7280; margin-top: 30px; padding-top: 20px; border-top: 1px solid #e5e7eb;">
        <strong>Questions about this update?</strong><br>
        Contact: {{updatedBy.name}} ({{updatedBy.email}})<br>
        Organization: {{organization.name}}
    </p>
</div>

{{/base}} 