{{#base headerTitle="Asset Deleted - Admin Notification" headerSubtitle="Asset has been removed from the system"}}

<div class="greeting">
    Hello {{adminName}}! 🗑️
</div>

<div class="message">
    <p>An asset has been deleted from the system. Please review the details below and ensure all related records are properly updated.</p>
</div>

<!-- Asset Details -->
<div class="info-card" style="background: linear-gradient(135deg, #fef2f2 0%, #fecaca 100%); border-left-color: #ef4444;">
    <h3 style="color: #991b1b;">🏷️ Deleted Asset Information</h3>
    <div class="detail-grid">
        <div class="detail-item">
            <span class="detail-label">Asset ID</span>
            <span class="detail-value" style="font-weight: 700; color: #991b1b;">{{asset.id}}</span>
        </div>
        <div class="detail-item">
            <span class="detail-label">Brand</span>
            <span class="detail-value">{{asset.brand}}</span>
        </div>
        <div class="detail-item">
            <span class="detail-label">Model</span>
            <span class="detail-value">{{asset.modelNumber}}</span>
        </div>
        <div class="detail-item">
            <span class="detail-label">Serial Number</span>
            <span class="detail-value" style="font-family: monospace; background: #f3f4f6; padding: 2px 6px; border-radius: 4px;">{{asset.serialNumber}}</span>
        </div>
    </div>
</div>

<!-- Action Details -->
<div class="info-card">
    <h3>📋 Deletion Details</h3>
    <div class="detail-grid">
        <div class="detail-item">
            <span class="detail-label">Deleted By</span>
            <span class="detail-value">{{actionBy.name}}</span>
        </div>
        <div class="detail-item">
            <span class="detail-label">Email</span>
            <span class="detail-value">{{actionBy.email}}</span>
        </div>
        <div class="detail-item">
            <span class="detail-label">Deletion Date</span>
            <span class="detail-value">{{formatDate actionDate}}</span>
        </div>
        {{#if actionDetails}}
        <div class="detail-item">
            <span class="detail-label">Reason</span>
            <span class="detail-value">{{actionDetails}}</span>
        </div>
        {{/if}}
    </div>
</div>

<!-- Admin Actions -->
<div style="background: rgba(153, 27, 27, 0.1); border: 2px solid #991b1b; border-radius: 12px; padding: 20px; margin: 20px 0;">
    <p style="font-size: 16px; font-weight: 700; color: #991b1b;">🚨 REQUIRED ADMINISTRATIVE ACTIONS</p>
    <ul style="margin-left: 20px; margin-top: 16px; line-height: 1.8; font-size: 15px; color: #7f1d1d;">
        <li>Verify the asset deletion was authorized</li>
        <li>Update inventory management systems</li>
        <li>Remove from insurance policies if applicable</li>
        <li>Update compliance and audit records</li>
        <li>Archive all related documentation</li>
        <li>Notify relevant stakeholders if necessary</li>
    </ul>
</div>

<!-- CTA Section -->
<div class="cta-section">
    <a href="{{dashboardLink}}" class="cta-button">Review Asset Management Dashboard</a>
</div>

<div class="message">
    <p style="font-size: 14px; color: #6b7280; margin-top: 30px; padding-top: 20px; border-top: 1px solid #e5e7eb;">
        <strong>Admin Alert:</strong> This automated notification is sent to administrators when assets are deleted from the system to ensure proper record keeping and compliance.
    </p>
</div>

{{/base}} 