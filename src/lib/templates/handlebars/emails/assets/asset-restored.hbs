{{#base headerTitle="Asset Restored to Your Account" headerSubtitle="Asset has been reassigned to your account"}}

<div class="greeting">
    Hello {{name}}! ✅
</div>

<div class="message">
    <p>Good news! An asset has been restored to your account. This asset was previously removed but has now been reassigned to you. Please review the details below.</p>
</div>

<!-- Asset Details -->
<div class="success-notice">
    <h3 style="color: #15803d;">🏷️ Restored Asset Information</h3>
    <div class="detail-grid">
        <div class="detail-item">
            <span class="detail-label">Asset ID</span>
            <span class="detail-value" style="font-weight: 700; color: #15803d;">{{assetId}}</span>
        </div>
        <div class="detail-item">
            <span class="detail-label">Brand</span>
            <span class="detail-value">{{brand}}</span>
        </div>
        <div class="detail-item">
            <span class="detail-label">Model</span>
            <span class="detail-value">{{modelNumber}}</span>
        </div>
        <div class="detail-item">
            <span class="detail-label">Serial Number</span>
            <span class="detail-value" style="font-family: monospace; background: #f3f4f6; padding: 2px 6px; border-radius: 4px;">{{serialNumber}}</span>
        </div>
    </div>
</div>

<!-- Next Steps -->
<div class="success-notice">
    <p style="font-size: 16px; font-weight: 700; color: #15803d;">📝 Next Steps</p>
    <ul style="margin-left: 20px; margin-top: 16px; line-height: 1.8; font-size: 15px;">
        <li>Confirm receipt and condition of the asset</li>
        <li>Test all functionality and report any issues</li>
        <li>Update your personal inventory records</li>
    </ul>
</div>

<!-- CTA Section -->
<div class="cta-section">
    <a href="{{dashboardLink}}" class="cta-button">View Asset Details</a>
</div>

{{/base}} 