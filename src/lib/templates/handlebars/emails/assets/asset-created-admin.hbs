{{#base headerTitle="New Asset Created - Admin Notification" headerSubtitle="Asset management system update"}}

<div class="greeting">
    Hello {{adminName}}! 📦
</div>

<div class="message">
    <p>A new asset has been created in the system. Please review the details below for your records and any necessary follow-up actions.</p>
</div>

<!-- Asset Details -->
<div class="info-card">
    <h3>🏷️ New Asset Information</h3>
    <div class="detail-grid">
        <div class="detail-item">
            <span class="detail-label">Asset ID</span>
            <span class="detail-value" style="font-weight: 700; color: #7c2d92;">{{asset.id}}</span>
        </div>
        <div class="detail-item">
            <span class="detail-label">Brand</span>
            <span class="detail-value">{{asset.brand}}</span>
        </div>
        <div class="detail-item">
            <span class="detail-label">Model</span>
            <span class="detail-value">{{asset.modelNumber}}</span>
        </div>
        <div class="detail-item">
            <span class="detail-label">Serial Number</span>
            <span class="detail-value" style="font-family: monospace; background: #f3f4f6; padding: 2px 6px; border-radius: 4px;">{{asset.serialNumber}}</span>
        </div>
    </div>
</div>

<!-- Action Details -->
<div class="info-card" style="background: linear-gradient(135deg, #f0fdf4 0%, #dcfce7 100%); border-left-color: #22c55e;">
    <h3 style="color: #166534;">📋 Action Details</h3>
    <div class="detail-grid">
        <div class="detail-item">
            <span class="detail-label">Created By</span>
            <span class="detail-value">{{actionBy.name}}</span>
        </div>
        <div class="detail-item">
            <span class="detail-label">Email</span>
            <span class="detail-value">{{actionBy.email}}</span>
        </div>
        <div class="detail-item">
            <span class="detail-label">Creation Date</span>
            <span class="detail-value">{{formatDate actionDate}}</span>
        </div>
        {{#if actionDetails}}
        <div class="detail-item">
            <span class="detail-label">Notes</span>
            <span class="detail-value">{{actionDetails}}</span>
        </div>
        {{/if}}
    </div>
</div>

<!-- Admin Actions -->
<div class="warning-notice">
    <p style="font-size: 16px; font-weight: 700; color: #d97706;">📝 Administrative Review</p>
    <ul style="margin-left: 20px; margin-top: 16px; line-height: 1.8; font-size: 15px;">
        <li>Verify asset information and specifications</li>
        <li>Confirm asset assignment and ownership</li>
        <li>Review insurance and warranty requirements</li>
        <li>Update inventory management systems</li>
        <li>Ensure compliance with asset policies</li>
    </ul>
</div>

<!-- CTA Section -->
<div class="cta-section">
    <a href="{{dashboardLink}}" class="cta-button">View Asset in Dashboard</a>
</div>

<div class="message">
    <p style="font-size: 14px; color: #6b7280; margin-top: 30px; padding-top: 20px; border-top: 1px solid #e5e7eb;">
        <strong>Admin Notification:</strong> This automated notification is sent to administrators when new assets are created in the system.
    </p>
</div>

{{/base}} 