{{#base headerTitle="Claim Status Update" headerSubtitle="Your claim status has been updated"}}

<div class="greeting">
    Hello {{name}},
</div>

<div class="message">
    <p>We're writing to inform you that there has been an update to your claim status. Please review the details below.</p>
</div>

<!-- Status Change -->
<div class="info-card">
    <h3>ðŸ“‹ Status Update</h3>
    <div style="background: #f9fafb; padding: 20px; border-radius: 12px; border-left: 4px solid #7c2d92; margin: 16px 0;">
        <div style="display: flex; align-items: center; gap: 16px; margin-bottom: 16px;">
            <span style="color: #6b7280; font-weight: 600;">Previous Status:</span>
            <span style="color: #dc2626; font-weight: 700; text-transform: uppercase;">{{previousStatus}}</span>
            <span style="color: #7c2d92; font-size: 20px;">â†’</span>
            <span style="color: #22c55e; font-weight: 700; text-transform: uppercase;">{{status}}</span>
        </div>
    </div>
    <div class="detail-grid">
        <div class="detail-item">
            <span class="detail-label">Claim ID</span>
            <span class="detail-value">#{{claimId}}</span>
        </div>
        <div class="detail-item">
            <span class="detail-label">Amount</span>
            <span class="detail-value" style="font-weight: 700; color: #7c2d92;">{{amount}}</span>
        </div>
        <div class="detail-item">
            <span class="detail-label">Category</span>
            <span class="detail-value">{{category}}</span>
        </div>
        <div class="detail-item">
            <span class="detail-label">Updated Date</span>
            <span class="detail-value">{{processedAt}}</span>
        </div>
        {{#if processedBy}}
        <div class="detail-item">
            <span class="detail-label">Updated By</span>
            <span class="detail-value">{{processedBy}}</span>
        </div>
        {{/if}}
    </div>
</div>

<!-- CTA Section -->
<div class="cta-section">
    <a href="{{dashboardLink}}/claims/{{claimId}}" class="cta-button">View Claim Details</a>
</div>

{{/base}} 