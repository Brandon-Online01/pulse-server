{{#base headerTitle="New Claim Submitted" headerSubtitle="Your claim has been successfully submitted for review"}}

<div class="greeting">
    Hello {{name}}! 💼
</div>

<div class="message">
    <p>Thank you for submitting your claim. We have received your request and it is now being processed by our team.</p>
</div>

<!-- Claim Details -->
<div class="info-card">
    <h3>📋 Claim Details</h3>
    <div class="detail-grid">
        <div class="detail-item">
            <span class="detail-label">Claim ID</span>
            <span class="detail-value">#{{claimId}}</span>
        </div>
        <div class="detail-item">
            <span class="detail-label">Amount</span>
            <span class="detail-value" style="font-weight: 700; color: #7c2d92; font-size: 18px;">{{amount}}</span>
        </div>
        <div class="detail-item">
            <span class="detail-label">Category</span>
            <span class="detail-value">{{category}}</span>
        </div>
        <div class="detail-item">
            <span class="detail-label">Status</span>
            <span class="detail-value" style="color: #f59e0b; font-weight: 600; text-transform: uppercase;">{{status}}</span>
        </div>
        <div class="detail-item">
            <span class="detail-label">Submitted Date</span>
            <span class="detail-value">{{submittedDate}}</span>
        </div>
        {{#if branch.name}}
        <div class="detail-item">
            <span class="detail-label">Branch</span>
            <span class="detail-value">{{branch.name}}</span>
        </div>
        {{/if}}
    </div>
</div>

{{#if comments}}
<div class="info-card">
    <h4 style="color: #4b5563;">💬 Additional Comments</h4>
    <p style="background: #f9fafb; padding: 16px; border-radius: 8px; border-left: 4px solid #7c2d92; margin-top: 12px; font-style: italic;">
        "{{comments}}"
    </p>
</div>
{{/if}}

<!-- Next Steps -->
<div class="info-card">
    <h4 style="color: #7c2d92;">⏭️ What Happens Next?</h4>
    <ul style="margin-left: 20px; color: #4b5563; line-height: 1.8;">
        <li style="margin-bottom: 8px;">Your claim will be reviewed by our finance team within 1-2 business days</li>
        <li style="margin-bottom: 8px;">You will receive email notifications for any status updates</li>
        <li style="margin-bottom: 8px;">If additional documentation is required, we will contact you promptly</li>
        <li style="margin-bottom: 8px;">Once approved, payment will be processed according to company policy</li>
    </ul>
</div>

<!-- Important Information -->
<div class="warning-notice">
    <h4 style="color: #d97706;">📌 Important Information</h4>
    <ul style="margin-left: 20px; line-height: 1.8;">
        <li style="margin-bottom: 8px;">Keep your claim ID (#{{claimId}}) for reference</li>
        <li style="margin-bottom: 8px;">Ensure all supporting documents are properly attached</li>
        <li style="margin-bottom: 8px;">Contact finance if you need to modify your claim</li>
    </ul>
</div>

<!-- CTA Section -->
<div class="cta-section">
    <a href="{{dashboardLink}}/claims/{{claimId}}" class="cta-button">View Claim Details</a>
</div>

<!-- Footer Message -->
<div class="message">
    <p style="color: #6b7280; font-size: 14px; margin-top: 20px;">
        Thank you for your submission. If you have any questions about your claim, please contact our finance team or check your dashboard for updates.
    </p>
</div>

{{/base}} 